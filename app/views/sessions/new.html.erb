<div class="login-container">
  <div class="login-box">
    <h2>Login</h2>

    <%= form_with url: login_path, method: :post, html: { class: 'login-form' } do |form| %>
      <div>
        <%= form.label :email %><br>
        <%= form.email_field :email, required: true %>
      </div>

      <div>
        <%= form.label :password %><br>
        <%= form.password_field :password, required: true %>
      </div>

      <div>
        <%= form.submit 'Entrar', class: 'lcars-submit' %>
      </div>
    <% end %>

    <p>NÃ£o tem conta? <%= link_to 'Cadastre-se', signup_path %></p>
  </div>
</div>
