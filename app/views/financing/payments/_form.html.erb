<%= simple_form_for payment,
  as: :payment,
  url: payment.new_record? ? financing_payments_path : financing_payment_path(payment),
  html: { class: "long-form" } do |f| %>

  <%= form_error_notification(payment) %>


  <%= f.input :financing_id, as: :hidden, input_html: { value: financing.id } %>
  <%= f.input :paid_parcels, as: :integer, label: t('payment.form.paid_parcels'), input_html: { value: 1 } %>
  <%= f.input :payment_date, as: :date, html5: true, label: t('payment.form.date'), input_html: { autofocus: true } %>
  <%= f.input :ordinary, as: :select, collection: [[t('payment.form.kind_parcel'), true],
   [t('payment.form.kind_amortization'), false]], label: t('payment.form.kind') %>
  <%= f.input :amortization, as: :float, label: t('payment.form.amortization') %>
  <%= f.input :interest, as: :float, label: t('payment.form.interest') %>
  <%= f.input :insurance, as: :float, label: t('payment.form.insurance') %>
  <%= f.input :fees, as: :float, label: t('payment.form.fees') %>
  <%= f.input :adjustment, as: :float, label: t('payment.form.adjustment') %>
  <%= f.input :monetary_correction, as: :float, label: t('payment.form.monetary_correction') %>

  <%= f.submit t('buttons.save'), class: "lcars-button lcars-button--secondary" %>
  <%= link_to t('buttons.cancel'), financing_path(financing), class: "lcars-button lcars-button--danger" %>
<% end %>
