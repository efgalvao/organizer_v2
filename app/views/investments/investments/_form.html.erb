<%= simple_form_for investment,
  as: :investment,
  url: investment.new_record? ? investments_path : investment_path(investment),
  html: { class: "form" } do |f| %>

  <%= form_error_notification(investment) %>

  <%= f.input :name, label: t('investments.investments.index.name'), input_html: { autofocus: true } %>
<% if investment.new_record? %>
  <%= f.input :invested_amount, as: :float, label: t('investments.investments.index.invested') %>
  <%= f.input :current_amount, as: :float, label: t('investments.investments.index.current') %>
  <%= f.input :type, as: :select, collection: [
    [t('investments.kinds.fixed'), "FixedInvestment"],
    [t('investments.kinds.stock'), "VariableInvestment"]], label: t('investments.investments.index.kind') %>
<% end %>
  <%= f.input :shares_total, as: :integer, label: t('investments.investments.index.shares') %>
  <%= f.input :account_id, as: :hidden, input_html: { value: investment.account_id } %>
  <%= f.input :kind, as: :select, collection: Investments::Investment.kinds.keys.map { |k| [t("investments.kinds.#{k}"), k] }, label: t('investments.investments.index.kind') %>
  <%= f.input :bucket, as: :select, collection: Investments::Investment.buckets.keys.map { |k| [t("investments.buckets.#{k}"), k] }, label: t('investments.investments.summary.bucket') %>

  <%= f.submit t('buttons.save'), class: "lcars-button lcars-button--secondary" %>
  <%= link_to t('buttons.cancel'), account_path(investment.account_id), class: "lcars-button lcars-button--danger" %>
<% end %>
