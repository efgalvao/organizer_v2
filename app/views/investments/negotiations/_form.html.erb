<%= simple_form_for negotiation,
  as: :negotiation,
  url: negotiation.new_record? ? investment_negotiations_path : investment_negotiation_path(negotiation),
  html: { class: "negotiation form" } do |f| %>

  <%= form_error_notification(negotiation) %>

  <%= f.input :date, label: t('investments.investments.show.negotiation_form.date'), as: :date, html5: true, input_html: { autofocus: true } %>
  <%= f.input :amount, as: :float, label: t('investments.investments.show.negotiation_form.amount') %>
  <%= f.input :shares, as: :integer, label: t('investments.investments.show.negotiation_form.shares') %>
  <%= f.input :kind, as: :select, collection: [["Compra", "buy"], ["Venda", "sell"]], label: t('investments.investments.show.negotiation_form.kind') %>
  <%= f.input :group, as: :select, collection: [["Metas", "objectives"], ["Liberdade", "freedom"]], label: t('investments.investments.show.negotiation_form.group') %>
  <%= f.input :investment_id, as: :hidden, input_html: { value: params[:investment_id] } %>

  <%= f.submit t('buttons.save'), class: "btn btn--secondary" %>
  <%= link_to t('buttons.cancel'), investment_negotiations_path(investment_id: params[:investment_id]), class: "btn btn--light" %>
<% end %>
