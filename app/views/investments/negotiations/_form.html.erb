<%= simple_form_for negotiation,
  as: :negotiation,
  url: negotiation.new_record? ? investment_negotiations_path : investment_negotiation_path(negotiation),
  html: { class: "negotiation form" } do |f| %>

  <%= form_error_notification(negotiation) %>

  <%= f.input :date, label: "Data", as: :date, html5: true, input_html: { autofocus: true } %>
  <%= f.input :amount_cents, as: :float, label: "Valor" %>
  <%= f.input :shares, as: :integer, label: "Cotas" %>
  <%= f.input :kind, as: :select, collection: [    ["Compra", "buy"], ["Venda", "sell"]], label: "Tipo" %>
  <%= f.input :investment_id, as: :hidden, input_html: { value: params[:investment_id] } %>

  <%= f.submit class: "btn btn--secondary" %>
  <%= link_to "Cancelar", investment_negotiations_path(investment_id: params[:investment_id]), class: "btn btn--light" %>
<% end %>
