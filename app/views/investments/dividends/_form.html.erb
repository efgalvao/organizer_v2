<%= simple_form_for dividend,
  as: :dividend,
  url: dividend.new_record? ? investment_dividends_path : investment_dividend_path(dividend),
  html: { class: "dividend form" } do |f| %>

  <%= form_error_notification(dividend) %>

  <%= f.input :date, label: "Data", as: :date, html5: true, input_html: { autofocus: true } %>
  <%= f.input :amount_cents, as: :float, label: "Valor" %>
  <%= f.input :investment_id, as: :hidden, input_html: { value: params[:investment_id] } %>

  <%= f.submit class: "btn btn--secondary" %>
  <%= link_to "Cancelar", investment_dividends_path(investment_id: params[:investment_id]), class: "btn btn--light" %>
<% end %>
