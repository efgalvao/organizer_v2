<main class="container">
  <div class="title">
    <h1><%= t('files.file_upload.title') %></h1>
  </div>

  <%= simple_form_for :upload, url: upload_path, method: :post, html: { multipart: true } do |f| %>

    <div class="form-group">
      <%= f.input :file,
                  as: :file,
                  label: false,
                  required: true,
                  input_html: { accept: 'text/csv', class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.input :origin,
                  label: t('files.file_upload.origin_label'),
                  as: :select,
                  collection: [['Fatura Nu', 'nu_invoice'], ['Extrato Nu', 'nu_statement']],
                  input_html: { class: "form-control" },
                  prompt: t('files.file_upload.choose_origin'),
                  required: true %>
    </div>

    <div class="form-group">
      <%= f.input :account_id,
                  as: :select,
                  collection: all_user_accounts(current_user.id),
                  label: t('files.file_upload.account'),
                  required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit t('files.file_upload.upload_button'), class: "lcars-button lcars-button--secondary" %>
      <%= link_to t('buttons.cancel'), file_upload_path, class: "lcars-button lcars-button--danger" %>
    </div>

  <% end %>
</main>
