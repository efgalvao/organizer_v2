<div class="lcars-content">
  <div class="lcars-subtitle">
    <%= t('card.show.past_reports.title') %>
  </div>

  <div class="lcars-table-container">

    <table class="lcars-table">
      <thead>
        <tr>
          <th><%= t('card.show.past_reports.date') %></th>
          <th><%= t('card.show.past_reports.incomes') %></th>
          <th><%= t('card.show.past_reports.expenses') %></th>
          <th><%= t('card.show.past_reports.invoice_payments') %></th>
          <th><%= t('card.show.past_reports.month_balance') %></th>
        </tr>
      </thead>

      <%= turbo_frame_tag "past_reports" do %>
        <tbody>
          <%= render partial: 'past_report', collection: past_reports, as: :past_report %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
