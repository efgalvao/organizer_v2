<%= simple_form_for transaction,
  as: :transaction,
  url: transaction.new_record? ? account_transactions_path : account_transaction_path(transaction),
  html: { class: "transaction form" } do |f| %>

  <%= form_error_notification(transaction) %>

  <%= f.input :title, label: "Descrição", input_html: { autofocus: true } %>
  <%= f.input :value, as: :integer, label: "Valor", input_html: { value: 1, readonly: !transaction.new_record? } %>
  <%= f.input :date, as: :date, html5: true, label: "Data da transação" %>
  <%= f.input :kind, as: :select, collection: [["Despesa", 0], ["Recebimento", 1]], label: "Tipo" %>

  <%= f.submit "Cadastrar", class: "btn btn--secondary" %>
  <%= link_to "Cancel", account_transactions_path, class: "btn btn--light" %>
<% end %>
