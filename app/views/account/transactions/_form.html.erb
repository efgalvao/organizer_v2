<%= simple_form_for transaction,
  as: :transaction,
  url: transaction.new_record? ? account_transactions_path : account_transaction_path(transaction),
  html: { class: "transaction form" } do |f| %>

  <%= form_error_notification(transaction) %>

  <%= f.input :title, label: t('transactions.form.description'), input_html: { autofocus: true } %>
  <%= f.input :value, as: :integer, label: t('transactions.form.amount'), input_html: { value: 1, readonly: !transaction.new_record? } %>
  <%= f.input :date, as: :date, html5: true, label: t('transactions.form.date') %>
  <%= f.input :kind, as: :select, collection: [[t('transactions.form.income_kind'), 0],
      [t('transactions.form.expense_kind'), 1]], label: t('transactions.form.kind') %>

  <%= f.submit t('buttons.save'), class: "btn btn--secondary" %>
  <%= link_to t('buttons.cancel'), account_transactions_path, class: "btn btn--light" %>
<% end %>
