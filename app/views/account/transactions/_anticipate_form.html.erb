<%= simple_form_for [@transaction.account, @transaction], url: anticipate_account_transaction_path(@transaction.account, @transaction), method: :post, html: { class: "anticipate-form" } do |f| %>
  <%= form_error_notification(@transaction) %>

  <%= f.input :anticipate_date, as: :date, html5: true, label: t('transactions.form.anticipate_date') %>

  <%= f.submit t('buttons.anticipate'), class: "btn btn--secondary" %>
  <%= link_to t('buttons.cancel'), account_transactions_path(@transaction.account), class: "btn btn--light" %>
<% end %>
