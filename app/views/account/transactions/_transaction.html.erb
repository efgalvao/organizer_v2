<%= turbo_frame_tag transaction do %>
<div class="transaction">

  <div>
    <%= transaction.title %>
  </div>
  <div>
    R$ <%= transaction.value %>
  </div>

  <div>
    <%= transaction.kind %>
  </div>

  <div>
    <%= transaction.date %>
  </div>

  <%= link_to transaction.account.name, account_path(transaction.account),
                data: { turbo_frame: "_top" }  %>

  <div class="account__actions">
    <%= link_to t('buttons.edit'),
                edit_account_transaction_path(id: transaction.id),
                class: "btn btn--light" %>
  </div>
</div>
<% end %>
