<%= simple_form_for account,
  as: :account,
  url: account.new_record? ? accounts_path : account_path(account),
  html: { class: "account form" } do |f| %>

  <%= form_error_notification(account) %>

  <%= f.input :name, label: "Nome", input_html: { autofocus: true } %>
  <%= f.input :kind, as: :select, collection: [["Banco", "savings"], ["Corretora", "broker"]], label: "Tipo" %>

  <%= f.submit class: "btn btn--secondary" %>
  <%= link_to "Cancel", accounts_path, class: "btn btn--light" %>
<% end %>
