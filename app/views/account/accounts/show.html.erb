<main class="container">
  <%= turbo_frame_tag "first_turbo_frame" do %>

    <div class="header">
  <%= link_to sanitize("&larr; Voltar para Contas"), accounts_path %>
      <h1><%= @account.name %></h1>

    </div>
  <% end %>
  <div class="button">
      <%= link_to "Transações",
                  account_transactions_path(@account, future: 'false'),
                  method: :get,
                  class: "btn btn--light" %>
      <% if @account.broker? %>
        <%= link_to "Cadastrar Renda Fixa",
        new_fixed_investment_path(account_id: @account.id),
                          data: { turbo_frame: "new_fixed_investment" },
        method: :get,
        class: "btn btn--light" %>
      <% end %>
      </div>
    <%= turbo_frame_tag "new_fixed_investment" %>

    <%= render 'summary', :account => @account %>

    <%# <%= render partial: 'investment', collection: @account.fixed_invLestments %> %>
    <%= render 'investments', :investments => @account.investments %>


</main>
