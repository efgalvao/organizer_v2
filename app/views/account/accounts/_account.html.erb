<%= turbo_frame_tag account do %>
  <div class="lcars-account-item">
    <div class="lcars-account-field">
      <%= link_to account.name, account_path(account), data: { turbo_frame: "_top" }, class: "lcars-link" %>
    </div>

    <div class="lcars-account-field">
      <%= account.balance %>
    </div>

    <div class="lcars-account-field">
      <%= account.formatted_type %>
    </div>

    <div class="lcars-account-actions">
      <%= link_to t('buttons.edit'),
                  edit_account_path(account),
                  class: "lcars-button lcars-button--secondary",
                  data: { turbo_frame: "account_account_#{account.id}" } %>
      <%= button_to t('buttons.delete'),
                    account_path(account),
                    method: :delete,
                    class: "lcars-button lcars-button--danger" %>
    </div>
  </div>
<% end %>
