<%= turbo_frame_tag account do %>

<div class="account">
  <%= link_to account.name, account_path(account),
                data: { turbo_frame: "_top" }  %>

  <div>
    R$ <%= account.balance %>
  </div>

  <div>
    <%= account.kind %>
  </div>

  <div class="account__actions">
    <%= link_to t('buttons.edit'),
                edit_account_path(account),
                class: "btn btn--light" %>
    <%= button_to t('buttons.delete'),
                  account_path(account),
                  method: :delete,
                  class: "btn btn--light" %>
  </div>
</div>
<% end %>
