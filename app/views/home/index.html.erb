<main>

<% if current_user %>
  <div class="item">
    <%= t('home.welcome') %> <%= current_user.name %>!!!
</div>

<div class="item">
    <%= t('home.helpful_message')%>
    </div>

    <div class="item">
    <%= link_to t('home.summary_button'), summary_path, class: "btn btn--light"%>
    <%= link_to t('home.accounts'), accounts_path, class: "btn btn--light"%>
    <%= link_to t('home.categories'), categories_path, class: "btn btn--light"%>
    <%= link_to t('home.edit_profile'), edit_user_registration_path, class: "btn btn--light" %>

  </div>
  <% else %>
    <div class="item">
      <h2><%= t('home.welcome_logged_out') %></h2>
      <p><%= link_to t('home.sign_up'), new_user_registration_path %> or <%= link_to t('home.sign_in'), new_user_session_path %></p>
    </div>
<% end %>
