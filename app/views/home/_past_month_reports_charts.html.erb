<div class="summary-item">
  <p class="summary-subtitle"><%= t('.monthly_balance') %></p>
  <div class="chart">
  <%= line_chart [
        { name: t('.total_balance'), data: semester_summary[:summary][:total] },
        { name: t('.total_cash'), data: semester_summary[:summary][:savings] },
        { name: t('.total_invested'), data: semester_summary[:summary][:stocks] }
        ], precision: 8, discrete: false, legend: 'bottom' %>
  </div>

    <div class="chart">
  <%= line_chart [
        { name: t('.total_balance'), data: semester_summary[:details][:incomes] },
        { name: t('.total_cash'), data: semester_summary[:details][:expenses] },
        { name: t('.total_invested'), data: semester_summary[:details][:invested] },
                { name: t('.total_invested'), data: semester_summary[:details][:card_expenses] }
        ], precision: 8, discrete: false, legend: 'bottom' %>
  </div>
</div>
