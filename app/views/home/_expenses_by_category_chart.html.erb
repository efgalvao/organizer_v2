<div class="summary-item">
  <div class="subtitle">
    <%= t('home.charts.expense_by_category') %>
    <%= link_to t('buttons.expenses'),
     transactions_path,
    data: { turbo_frame: "_top" },
    class: "btn btn--secondary" %>
  </div>

  <div class="charts-container">
    <div class="chart">
      <h4><%= t('home.charts.card_expenses_by_category') %></h4>
      <%= pie_chart expense_by_category[:card_expenses], precision: 8, discrete: false, legend: 'bottom' %>
    </div>

    <div class="chart">
      <h4><%= t('home.charts.account_expenses_by_category') %></h4>
      <%= pie_chart expense_by_category[:account_expenses], precision: 8, discrete: false, legend: 'bottom' %>
    </div>
  </div>
</div>
