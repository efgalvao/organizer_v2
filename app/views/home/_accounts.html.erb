<div class="lcars-content">
  <div class="lcars-subtitle">
  <%= t('home.accounts.title') %>
</div>

<div class="lcars-table-container">
  <table class="lcars-table">
  <thead>
    <tr>
      <th><%= t('home.accounts.account') %></th>
      <th><%= t('home.accounts.balance') %></th>
      <th><%= t('home.accounts.investments') %></th>
      <th><%= t('home.accounts.total') %></th>
    </tr>
  </thead>
  <tbody>
    <% accounts.each do |account| %>
    <tr>
      <td><%= link_to account[:name], account_path(account[:id]) %></td>
      <td>R$ <%= account[:balance] %></td>
      <td>R$ <%= account[:investments] %></td>
      <td>R$ <%= account[:total] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
